{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",

        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "useDefineForClassFields": true,

        // "experimentalDecorators": true,
    }
}